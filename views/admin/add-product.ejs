<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-product-form.css" />
    <%- include('../includes/navigation.ejs') %>
      <main>
      <h1>ADMIN Add Product</h1>
      <form class="product-form" action="/admin/add-product" method="POST" id="add-product-form">
        <div class="form-control">
          <label for="productname">Product Name</label>
          <input type="text" name="name" id="productname" />
          <label for="productimage">Image Url</label>
          <input type="url" name="image" id="productimage"/>
          <label for="productdescription">Description</label>
          <textarea Form="add-product-form" rows ="5" name="description"></textarea>
          <label for="productPrice">Price</label>
          <input type="number" name="price" id="productprice" min="0" placeholder="0" step="0.01" />
        </div>

        <button type="submit">Add Product</button>
      </form>
      <%- include('../includes/end.ejs') %>